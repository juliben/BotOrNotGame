{
  "compilerOptions": {
    "target": "es5",
    "useDefineForClassFields": true,
    "jsx": "react",
    "lib": ["dom", "es2015"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": ".",

    /* Bundler mode */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    // "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
